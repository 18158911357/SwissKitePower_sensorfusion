    \topmargin=1.2cm
    \ETHkopfTwo{\laboratorystring}{\professorstring}{\periodstring}
    \vspace{-2.5cm}
  
    % --------------- SADA INFO ---------------
   \noindent
   \begin{center}
     \Large
     \dasatypestring
   \end{center}
   \begin{center}
     \large
     \studentstring
   \end{center}
   \vskip 2.5em
   \begin{center}
     \LARGE  
     \textbf{\titlestring}
   \end{center}
   \vskip 2.5em
   \begin{center}
     \large
     \begin{tabular}{ll}
       Betreuer:       & \mainreaderstring \\
       Stellvertreter: & \alternatereaderstring
     \end{tabular}
   \end{center}
   \vskip 0.5em
   \begin{center}
     \large
     \begin{tabular}{ll}
       Ausgabe:      & \issuedatestring \\
       Abgabe:       & \submissiondatestring
     \end{tabular}
   \end{center}
   \par
   \vskip 2.5em
}

